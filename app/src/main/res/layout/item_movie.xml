<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/deepGray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginTop="6pt"
        android:layout_marginBottom="6pt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/deepGray"
        android:id="@+id/itemLayout">
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35"
            android:id="@+id/guideLine"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingBottom="8pt"
            android:background="@drawable/item_back"
            android:layout_marginTop="15pt"
            android:id="@+id/movieLayout">
            <androidx.constraintlayout.widget.Guideline
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.35"
                android:id="@+id/textGuide"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/textGuide"
                android:layout_marginStart="10pt"
                android:layout_marginTop="10pt"
                android:layout_marginEnd="5pt"
                android:text="Movie"
                android:textSize="8pt"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:id="@+id/tvTitle"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                app:layout_constraintStart_toStartOf="@id/tvTitle"
                app:layout_constraintEnd_toEndOf="@id/tvTitle"
                android:layout_marginTop="4pt"
                android:text="Drama / Action"
                android:textStyle="bold"
                android:textColor="@color/whiteOpacity70"
                android:textSize="6pt"
                android:id="@+id/tvGenre"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvGenre"
                app:layout_constraintStart_toStartOf="@id/tvTitle"
                app:layout_constraintEnd_toEndOf="@id/tvTitle"
                android:layout_marginTop="1pt"
                android:text="by Director"
                android:textColor="@color/whiteOpacity70"
                android:textSize="5pt"
                android:id="@+id/tvDirector"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/tvDirector"
                app:layout_constraintTop_toBottomOf="@id/tvDirector"
                android:textSize="9pt"
                android:textColor="@color/yellowStar"
                android:layout_marginTop="4pt"
                android:text="9.9"
                android:textStyle="bold"
                android:id="@+id/tvStar"/>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tvStar"
                app:layout_constraintTop_toTopOf="@id/tvStar"
                app:layout_constraintBottom_toBottomOf="@id/tvStar"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Widget.AppCompat.RatingBar.Small"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="10pt"
                android:layout_marginEnd="5pt"
                android:scaleY="1.3"
                android:scaleX="1.3"
                android:numStars="5"
                android:rating="5"
                android:progressTint="@color/yellowStar"
                android:id="@+id/ratingBar"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideLine"
            android:layout_marginStart="8pt"
            android:layout_marginBottom="8pt"
            android:src="@drawable/img_movie"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintHorizontal_bias="0"
            android:id="@+id/imgView"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>